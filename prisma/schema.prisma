generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HealthCheck {
  id        Int      @id @default(autoincrement())
  status    String
  createdAt DateTime @default(now())

  @@map("health_checks")
}

model SRDObject {
  id          Int      @id @default(autoincrement())
  index       String   @unique // e.g. "longsword"
  type        String // e.g. "weapon", "spell", "monster"
  data        Json // raw object from API
  lastFetched DateTime @default(now()) // when it was cached

  @@index([type]) // so you can quickly query all "spells" etc.
}
